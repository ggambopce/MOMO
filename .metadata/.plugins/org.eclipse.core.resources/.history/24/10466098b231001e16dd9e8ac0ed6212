package com.KoreaIT.MOMO.repository;

import java.util.List;

import org.apache.ibatis.annotations.Mapper;

import com.KoreaIT.MOMO.vo.Mmaker;

@Mapper
public interface ArticleRepository {

	public void writeArticle(int memberId, int boardId, String title, String body);

	public int getLastInsertId();

	public Mmaker getArticleById(int id);

	public List<Mmaker> getArticles(int boardId, int limitStart, int itemsInAPage);

	public void modifyArticle(int id, String title, String body);
	
	public void deleteArticle(int id);
	
	public Mmaker getForPrintArticle(int id);
	
	public int getArticlesCnt(int boardId);
}