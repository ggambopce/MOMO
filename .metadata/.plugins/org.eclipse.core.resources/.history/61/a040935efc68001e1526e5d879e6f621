<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.KoreaIT.MOMO.repository.MmakerRepository">

	<insert id="writeMmaker">
		INSERT INTO `mmaker`
		SET regDate = NOW(),
		updateDate = NOW(),
		memberId = #{memberId},
		moimmain = #{moimMain},
		moimbody = #{moimBody},
		moimimg = #{moimImg},
		moimplace = #{moimPlace},
		moimdatetime = #{moimDatetime},
		moimmembercnt = #{moimMemberCnt},
		moimprice = #{moimPrice}
	</insert>

	<select id="getLastInsertId" resultType="int">
		SELECT LAST_INSERT_ID()
	</select>

	
	<select id="getForPrintMmaker" resultType="Mmaker">
		SELECT A.*, M.name AS writerName 
			FROM SB_AM.mmaker AS A
			INNER JOIN SB_AM.member AS M
			ON A.memberId = M.id
			WHERE A.id = #{id}	
	</select>
	
	<update id="increaseHitCount">
		UPDATE SB_AM.mmaker
			SET hitCount = hitCount + 1
			WHERE id = #{id}
	</update>

	<select id="getMmakerById" resultType="Mmaker">
		SELECT *
		FROM SB_AM.mmaker
		WHERE id = #{id}
	</select>
	
	<select id="getMmakers" resultType="Mmaker">
		<![CDATA[
		With AM AS (
			SELECT A.*, M.name AS writerName
				FROM SB_AM.mmaker AS A
				INNER JOIN SB_AM.member AS M
				ON A.memberId = M.id OR A.memberId = 0
			)
			SELECT AM.*
	            , IFNULL(SUM(RP.point), 0) AS sumReactionPoint
	            , IFNULL(SUM(IF(RP.point > 0, RP.point, 0)), 0) AS goodReactionPoint
	           	, IFNULL(SUM(IF(RP.point < 0, RP.point, 0)), 0) AS badReactionPoint
	        	FROM AM
            	LEFT JOIN SB_AM.reactionPoint AS RP
            	ON RP.relTypeCode = 'mmaker'
            	AND RP.relId = AM.id
            	WHERE AM.moimdatetime > NOW()
			    GROUP BY AM.id
			    ORDER BY AM.id DESC
		
		
		]]>
	</select>

	<update id="modifyMmaker">
		UPDATE SB_AM.mmaker
		<set>
			updateDate = NOW(),
			<if test="moimMain != null and moimMain != ''">
				moimMain = #{moimMain},
			</if>
			<if test="moimBody != null and moimBody != ''">
				moimBody = #{moimBody},
			</if>
			<if test="moimImg != null and moimImg != ''">
				moimImg = #{moimImg},
			</if>
			<if test="moimPlace != null and moimPlace != ''">
				moimPlace = #{moimPlace},
			</if>
			<if test="moimPrice != null and moimPrice != ''">
				moimPrice = #{moimPrice}
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<delete id="deleteMmaker">
		DELETE FROM SB_AM.mmaker
		WHERE id = #{id}
	</delete>

</mapper>